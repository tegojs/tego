{
  "permissions": {
    "allow": [
      "Shell(ls)",
      "Shell(cd)",
      "Shell(cat)",
      "Shell(git)",
      "Shell(pnpm)",
      "Shell(npm)",
      "Shell(node)",
      "Shell(npx)",
      "Shell(tsx)",
      "Read(packages/**/*.ts)",
      "Read(packages/**/*.tsx)",
      "Read(packages/**/*.js)",
      "Read(packages/**/*.jsx)",
      "Read(packages/**/*.json)",
      "Read(packages/**/*.md)",
      "Read(*.json)",
      "Read(*.ts)",
      "Read(*.tsx)",
      "Read(*.md)",
      "Read(.cursor/**/*)",
      "Read(.github/**/*)",
      "Read(.git/COMMIT_EDITMSG)",
      "Write(packages/**/*.ts)",
      "Write(packages/**/*.tsx)",
      "Write(packages/**/*.js)",
      "Write(packages/**/*.jsx)",
      "Write(packages/**/package.json)",
      "Write(package.json)",
      "Write(tsconfig*.json)",
      "Write(.cursor/**/*)",
      "Write(.github/**/*)",
      "Write(.git/COMMIT_EDITMSG)"
