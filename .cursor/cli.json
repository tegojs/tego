    "deny": [
      "Shell(rm)",
      "Shell(rmdir)",
      "Shell(del)",
      "Shell(format)",
      "Shell(diskutil)",
      "Read(.env*)",
      "Read(*.key)",
      "Read(*.pem)",
      "Read(*.p12)",
      "Read(*.pfx)",
      "Read(*.secret)",
      "Read(storage/**/*)",
      "Read(node_modules/**/*)",
      "Write(.env*)",
      "Write(*.key)",
      "Write(*.pem)",
      "Write(*.secret)",
      "Write(storage/**/*)",
      "Write(node_modules/**/*)",
      "Write(pnpm-lock.yaml)"
    ]
  }
}
